<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".authentication.OTPVerifyActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/enter_otp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Verify OTP Code"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:text="OTP Verify Message"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Phone number"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />
        <EditText
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />
        <EditText
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/otp_edit_text"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/red"
        app:cornerRadius="10dp"
        android:text="Verify"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Don't receive the code?"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="00:30"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>