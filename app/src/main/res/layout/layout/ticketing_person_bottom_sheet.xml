<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LaLa Land"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012.3.19"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/tv_runningTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:15~22:44"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màn hình "
                    android:textColorHint="@color/grey_dark"
                    >
                </TextView>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng đặt vé"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tối đa 5 vé"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <RadioGroup
                        android:id="@+id/rg_normal_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A01"
                            android:tag="1"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A02"
                            android:tag="2"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A03"
                            android:tag="3"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A04"
                            android:tag="4"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A05"
                            android:tag="5"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A06"
                            android:tag="6"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A07"
                            android:tag="7"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="A08"
                            android:tag="8"
                            android:background="@drawable/radio_button_person_check"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <RadioGroup
                        android:id="@+id/rg_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B01"
                            android:tag="1"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B02"
                            android:tag="2"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B03"
                            android:tag="3"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B04"
                            android:tag="4"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B05"
                            android:tag="5"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B06"
                            android:tag="6"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B07"
                            android:tag="7"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="B08"
                            android:tag="8"
                            android:background="@drawable/radio_button_person_check"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rg_preferential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C01"
                            android:tag="1"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C02"
                            android:tag="2"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C03"
                            android:tag="3"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C04"
                            android:tag="4"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C05"
                            android:tag="5"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C06"
                            android:tag="6"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C07"
                            android:tag="7"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/radio_button_person_check"/>
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:button="@color/transparent"
                            android:text="C08"
                            android:tag="8"
                            android:background="@drawable/radio_button_person_check"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_person_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Đặt vé" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
