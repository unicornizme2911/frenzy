<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:background="@drawable/con_b__ci_logo"
            android:id="@+id/rv_home_phimrandom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"/>

        <LinearLayout
            android:id="@+id/tl_home_movielist_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/btn_home_phimdangchieu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/ic_home_movielist_btn"
                android:text="Đang chiếu"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/red"/>

            <Button
                android:id="@+id/btn_home_phimsapchieu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/ic_home_movielist_btn"
                android:text="Sắp chiếu"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/red"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:background="@drawable/con_b__ci_logo"
                android:id="@+id/rv_home_movielist_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_find_theaters"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm rạp gần bạn"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ig_find"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    >

                </ImageView>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="Nhập thành phố"
                    android:textColorHint="@color/grey_dark"
                    android:textColor="@color/white"
                    >
                </EditText>

            </LinearLayout>

<!--            <Spinner-->
<!--                android:id="@+id/spinner_near_theaters"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:background="@drawable/combined_background_spinner_black"-->
<!--                android:imeOptions="actionDone|flagNoExtractUi"-->
<!--                android:rotation="0"-->
<!--                android:outlineAmbientShadowColor="@color/black"-->
<!--                android:outlineSpotShadowColor="@color/black"-->
<!--                android:scrollbars="vertical"-->
<!--                android:spinnerMode="dropdown" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_theaters_near_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freenzy"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>