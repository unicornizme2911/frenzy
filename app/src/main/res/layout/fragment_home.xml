<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/con_b__ci_logo"
            android:id="@+id/rv_home_phimrandom"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"/>

        <LinearLayout
            android:id="@+id/tl_home_movielist_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE">

            <Button
                android:id="@+id/btn_home_phimdangchieu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/ic_home_movielist_btn"
                android:text="Đang chiếu"
                android:textStyle="bold"
                android:textSize="13sp"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_home_phimsapchieu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/ic_home_movielist_btn"
                android:text="Sắp chiếu"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn_home_phimdacbit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/ic_home_movielist_btn"
                android:text="Đặc biệt"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_movielist_container"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/hi_cu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:hint="Tìm rạp gần bạn"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:src="@drawable/ic_search"></ImageView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_theaters_near_you"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freenzy"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>